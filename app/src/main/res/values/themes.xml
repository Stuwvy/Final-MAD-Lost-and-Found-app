<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Main App Theme -->
    <style name="Theme.Back2Me" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryDark">@color/primaryBlueDark</item>
        <item name="colorAccent">@color/accentBlue</item>


        <!-- Background Colors -->
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorSurface">@color/cardBackground</item>

        <!-- On Colors -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/textPrimary</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textColorHint">@color/textHint</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primaryBlue</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>