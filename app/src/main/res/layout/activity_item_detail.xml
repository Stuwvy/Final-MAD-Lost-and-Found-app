<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ItemDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Back Button -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Item Image -->
            <ImageView
                android:id="@+id/image_item"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="centerCrop"
                android:background="#E0E0E0" />

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@drawable/circle_background_white"
                android:src="@drawable/ic_arrow_back"
                android:padding="8dp"
                app:tint="@color/black"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Content Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Status Badge -->
                <TextView
                    android:id="@+id/text_item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@drawable/badge_lost"
                    tools:text="ðŸ”´ Lost Item" />

                <!-- Item Name -->
                <TextView
                    android:id="@+id/text_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    tools:text="iPhone 14 Pro Max" />

                <!-- Owner Note (for item owner) -->
                <TextView
                    android:id="@+id/text_owner_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="12dp"
                    android:background="@drawable/note_background"
                    android:textSize="14sp"
                    android:textColor="#1565C0"
                    android:visibility="gone"
                    tools:text="This is your item. View claims below."
                    tools:visibility="visible" />

                <!-- Location Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        app:tint="#757575" />

                    <TextView
                        android:id="@+id/text_item_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textSize="15sp"
                        android:textColor="@color/textSecondary"
                        tools:text="Central Park, New York" />

                </LinearLayout>

                <!-- Date & Time Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="#757575" />

                    <TextView
                        android:id="@+id/text_item_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textSize="15sp"
                        android:textColor="@color/textSecondary"
                        tools:text="10 Dec 2025" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="â€¢"
                        android:textColor="@color/textSecondary" />

                    <TextView
                        android:id="@+id/text_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textSize="15sp"
                        android:textColor="@color/textSecondary"
                        tools:text="02:30 PM" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#E0E0E0" />

                <!-- Description Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Description"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary" />

                <TextView
                    android:id="@+id/text_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="15sp"
                    android:textColor="@color/textSecondary"
                    android:lineSpacingExtra="4dp"
                    tools:text="Lost my iPhone 14 Pro Max near the fountain. It has a blue case with a crack on the corner. Please contact me if found!" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:background="#E0E0E0" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">

                    <!-- Contact Button (for non-owners) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_contact"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸ“§ Contact Owner"
                        android:textSize="16sp"
                        app:cornerRadius="12dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeColor="@color/primaryBlue"
                        app:strokeWidth="2dp" />

                    <!-- Claim Button (for non-owners) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_claim"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="âœ‹ I Found This Item!"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/primaryBlue" />

                    <!-- View Claims Button (for owners only) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_view_claims"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸ“‹ View Claims"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/primaryBlue"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="end"
                        app:iconTint="@color/white"
                        tools:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
