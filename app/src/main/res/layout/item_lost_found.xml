<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Item Image - Changed from View to ImageView -->
        <ImageView
            android:id="@+id/item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/item_card_background"
            android:scaleType="centerCrop"
            android:contentDescription="Item image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Item Name -->
        <TextView
            android:id="@+id/text_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/phone"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/item_image"
            app:layout_constraintStart_toEndOf="@id/item_image"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Item Location -->
        <TextView
            android:id="@+id/text_item_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="@string/on_street_at_rupp"
            android:textColor="@color/textSecondary"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/text_item_name"
            app:layout_constraintStart_toEndOf="@id/item_image"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Time -->
        <TextView
            android:id="@+id/text_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="10:30 AM"
            android:textColor="@color/textHint"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/text_item_location"
            app:layout_constraintStart_toEndOf="@id/item_image"
            app:layout_constraintBottom_toBottomOf="@id/item_image"
            tools:ignore="HardcodedText"/>

        <!-- Date -->
        <TextView
            android:id="@+id/text_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Dec 3, 2025"
            android:textColor="@color/textHint"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/text_item_time"
            app:layout_constraintBottom_toBottomOf="@id/text_item_time"
            app:layout_constraintStart_toEndOf="@id/text_item_time"
            tools:ignore="HardcodedText"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>